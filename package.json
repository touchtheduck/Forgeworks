{
	"name": "forgeworks-root",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"lint": "eslint packages --ext mjs,js,ts,tsx --fix",
		"format": "prettier --ignore-path=.prettierignore --write \"packages/**/{src,test,scripts}/**/*.{mjs,ts,js}\"",
		"check-update": "turbo run check-update",
		"test": "vitest run",
		"predev:client": "yarn setup:client && yarn clean:client && turbo run predev",
		"predev:server": "yarn setup:server && yarn clean:server && turbo run predev",
		"dev:client": "yarn predev:client && yarn env:client",
		"dev:server": "yarn predev:server && yarn env:server",
		"clean:client": "blockenv clean -e client",
		"clean:server": "blockenv clean -e server",
		"setup:client": "blockenv setup -e client --new-setup-order",
		"setup:server": "blockenv setup -e server --new-setup-order",
		"env:client": "blockenv launch -e client -p NeoForge",
		"env:server": "blockenv launch -e server"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@commitlint/types": "^19.8.1",
		"@eslint/js": "^9.27.0",
		"@favware/cliff-jumper": "^6.0.0",
		"@jaronline/blockenv": "^1.1.1",
		"@types/node": "^22.15.18",
		"@vitest/coverage-v8": "^3.1.3",
		"eslint": "^9.27.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-prettier": "^5.4.0",
		"lint-staged": "^16.0.0",
		"prettier": "^3.5.3",
		"toml": "^3.0.0",
		"tsup": "^8.5.0",
		"turbo": "^2.5.3",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.32.1",
		"vite": "^6.3.5",
		"vitest": "^3.1.3"
	},
	"packageManager": "yarn@4.9.1"
}
