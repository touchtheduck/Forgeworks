#!/usr/bin/env sh
PACK_FILE="$PWD/modpack/pack.toml"
PACKAGE_JSON="$PWD/package.json"
COMPAT_CHECK_CONFIG_FILE="$PWD/modpack/config/bcc-common.toml"

if [ ! -f "$PACK_FILE" ]; then
    echo "Pack file not found at $PACK_FILE"
    exit 1
fi

if [ ! -f "$PACKAGE_JSON" ]; then
    echo "package.json not found at $PACKAGE_JSON"
    exit 1
fi

has_param() {
    local term="$1"
    shift
    for arg; do
        if [[ $arg == "$term" ]]; then
            return 0
        fi
    done
    return 1
}

cliff-jumper "$@"

if ! has_param "--dry-run" "$@"; then
    version=$(grep -oE '"version": *"[^"]*"' "$PACKAGE_JSON" | head -n 1 | cut -d '"' -f 4)
    sed -i "s/version = \"[^\"]*\"/version = \"$version\"/" "$PACK_FILE"
    sed -i "s/modpackVersion = \"[^\"]*\"/modpackVersion = \"$version\"/" "$COMPAT_CHECK_CONFIG_FILE"
    git add "$PACK_FILE" "$COMPAT_CHECK_CONFIG_FILE"
    git commit --amend --no-edit
    git push --force-with-lease
    tag=$(git describe --tags --abbrev=0)
    message=$(git tag -l --format="%(contents)" "$tag")
    git tag -f -a "$tag" -m "$message"
    git push --force --tags
fi
